  "/core/merchant/payment-methods/create":
    post:
      summary: Add a payment method to a merchant
      operationId: post-core-merchant-payment-methods-create
      responses:
        "200":
          description: OK
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    "$ref": "../Models/Status.json"
                  id:
                    type: integer
                    description: Identifier of the payment method added to the merchant.
                    example: 1
              examples:
                Successful response:
                  value:
                    status:
                      status: OK
                      reason: "00"
                      message: The request has been processed successfully.
                      date: "2021-09-21T09:34:48-05:00"
                    id: 1
        "400":
          description: Bad Request
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    "$ref": "../Models/Status.json"
              examples:
                Failed response:
                  value:
                    Status:
                      status: FAILED
                      reason: BR
                      message: The field data.customerId is required.
                      date: "2021-09-21T09:34:48-05:00"
        "401":
          description: Unauthorized
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    "$ref": "../Models/Status.json"
              examples:
                Authentication failed:
                  value:
                    status:
                      status: FAILED
                      reason: "401"
                      message: Authentication does not contain all the required parameters (login, tranKey, seed, nonce).
                      date: "2021-09-21T09:34:48-05:00"
      requestBody:
        content:
          application/json:
            schema:
              type: object
              required:
                - auth
                - data
              properties:
                auth:
                  "$ref": "../Models/Autentication.json"
                data:
                  type: object
                  description: Object with the necessary information to add a payment method to a merchant.
                  required:
                    - customerId
                    - code
                    - commissionModel
                    - commissionValue
                    - accountType
                    - accountNumber
                  properties:
                    customerId:
                      type: integer
                      example: 1
                      minimum: 1
                      description: Merchant identifier.
                    code:
                      type: string
                      maxLength: 5
                      example: RM_MC
                      description: Payment method identifier code.
                    commissionModel:
                      type: string
                      enum:
                        - P
                        - F
                      example: P
                      maxLength: 1
                      description: Commission model.
                    commissionValue:
                      type: number
                      format: float
                      example: 1000.5
                      minimum: 0
                      maximum: 9999.99
                      description: Commission value.
                    accountType:
                      type: integer
                      example: 1
                      description: Collection account type identifier.
                    accountNumber:
                      type: string
                      example: "1234567890"
                      maxLength: 20
                      description: Collection account number.
                    financialEntity:
                      type: integer
                      example: 2
                      description: Identifier of the financial entity or collecting bank of the payment method. The financial entity must be from the merchant's country.
                    order:
                      type: integer
                      example: 1
                      minimum: 1
                      maximum: 32767
                      description: Priority level.
                    settings:
                      "$ref": "#/components/schemas/Settings-Payment-Method"
                    creditRules:
                      type: object
                      x-stoplight:
                        id: c0wffn4dmstuw
                      description: Object containing the credit rules of the payment method.
            examples:
              Add a payment method:
                value:
                  auth:
                    login: 613822f45568191a8cdf4ad2299f6d23
                    tranKey: bHehjzNcMQVQ1zto0GhmZxjeMhwA+3OlFPbOup16HGc=
                    nonce: NjE1MWQ4MDE5YWViMw==
                    seed: "2021-09-27T09:41:05-05:00"
                  data:
                    customerId: 1
                    code: RM_MC
                    commissionModel: P
                    commissionValue: 1
                    accountType: 1
                    accountNumber: "1234567890"
                    financialEntity: 2
                    order: 1
                    settings:
                      username: username
                      terminalLocation: Medellín
                      serviceCode: "123456"
                      isEcommerce: true
                      3DSVersion: v2
                      3DSApiKey: "468232"
                    creditRules:
                      RM_MC:
                        C:
                          "1":
                            minimum: "1"
                          "2":
                            remove: true
                          "3":
                            maximum: "10"
      description: This service allows adding an existing payment method to a merchant.
      tags:
        - Actions on payment methods
