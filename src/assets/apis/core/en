  "/core/site/create":
    post:
      summary: Create a site
      operationId: post-core-site-create
      responses:
        "200":
          description: OK
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    "$ref": "../Models/Status.json"
                  id:
                    type: integer
                    example: 15
                    description: ID of the created site.
                  login:
                    type: string
                    example: 375f6ede93cd4bad8449efa920411238
                    description: Site login
                  tranKey:
                    type: string
                    example: E5u2PQ4whFeLvy86
                    description: Site transactional key
                  active:
                    type: boolean
                    default: true
                    description: Site status.
              examples:
                Successful response:
                  value:
                    status:
                      status: OK
                      reason: "00"
                      message: The request has been processed successfully.
                      date: "2021-09-21T09:34:48-05:00"
                    id: 15
                    active: true
                    login: 375f6ede93cd4bad8449efa920411238
                    tranKey: E5u2PQ4whFeLvy86
        "400":
          description: Bad Request
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    "$ref": "../Models/Status.json"
              examples:
                Failed response:
                  value:
                    Status:
                      status: FAILED
                      reason: BR
                      message: The field name is required.
                      date: "2021-09-21T09:34:48-05:00"
        "401":
          description: Unauthorized
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    "$ref": "../Models/Status.json"
              examples:
                Authentication failed:
                  value:
                    status:
                      status: FAILED
                      reason: "401"
                      message:
                        authentication does not contain all the required parameters
                        (login, tranKey, seed, nonce)
                      date: "2021-09-21T09:34:48-05:00"
      requestBody:
        content:
          application/json:
            schema:
              type: object
              required:
                - auth
                - data
              properties:
                auth:
                  "$ref": "../Models/Authentication.json"
                data:
                  type: object
                  description: Array containing the information of the site to create.
                  required:
                    - name
                    - displayName
                    - customerId
                    - type
                    - category
                    - email
                    - currency
                    - language
                    - integration
                    - control
                  properties:
                    login:
                      type: string
                      maxLength: 32
                      example: 375f6ede93cd4bad8449efa920411238
                      description: Site login.
                    tranKey:
                      type: string
                      description: Site transactional key.
                      maxLength: 32
                      example: E5u2PQ4whFeLvy86
                    md5Hash:
                      type: string
                      description: Data masking algorithm.
                      maxLength: 32
                      example: e0xy799SGB3zj689
                    name:
                      type: string
                      description: Name of the site.
                      maxLength: 128
                      example: Site name
                    displayName:
                      type: string
                      example: Site display name
                      maxLength: 128
                      description: Display name of the site.
                    customerId:
                      type: integer
                      example: 1
                      description:
                        Identifier of the merchant associated with the site to
                        be created. The merchant must be active for the process.
                    type:
                      type: string
                      description: Origin of the transaction.
                      enum:
                        - INT
                        - POS
                        - IVR
                        - REC
                        - ONE
                        - AIR
                      example: INT
                      maxLength: 3
                    category:
                      type: string
                      description: Category of the site.
                      enum:
                        - ECOMMERCE
                        - COLLECT
                      example: ECOMMERCE
                    email:
                      type: string
                      format: email
                      maxLength: 80
                      example: test@test.com
                      description: Email for notifications.
                    currency:
                      type: string
                      description: Default currency.
                      maxLength: 3
                      example: COP
                    language:
                      type: string
                      description: Default language.
                      maxLength: 2
                      example: ES
                    active:
                      type: boolean
                      description: Indicator of the site's status.
                    customBatch:
                      type: number
                      example: 1235665
                    expiration:
                      type: string
                      description: Expiration date.
                      default: null
                      nullable: true
                    onTest:
                      type: boolean
                      description: Indicator of test site.
                    productionDate:
                      type: string
                      description: Production Release Date.
                      default: null
                      nullable: true
                      format: date
                      example: 2024-01-01
                    integration:
                      type: object
                      description: Object containing the site's integration information.
                      required:
                        - allowPartial
                        - checkoutVersion
                      properties:
                        allowPartial:
                          type: boolean
                          description: Partial payment indicator.
                        connectionMethod:
                          type: string
                          enum:
                            - REDIRECT
                            - REDIRECT_OLD
                            - SERVICES
                            - LINK
                            - QR
                            - MS_OPEN
                            - MS_CLOSED
                            - MS_CUSTOM
                            - IVR
                            - INVOICE_API
                            - PVA
                            - RECURRENCE
                          example: REDIRECT
                          description: Integration method.
                        notificationUrl:
                          type: string
                          maxLength: 128
                          example: www.urlexample.com
                          description: URL for notification.
