paths:
  "/core/merchant/create":
    post:
      summary: Merchant Creation
      operationId: post-core-merchant-create
      description:
        This service allows for the creation of a merchant. If the process is successful,
        the merchant ID and its status are returned.
      responses:
        "200":
          description: OK
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    "$ref": "../Models/Status.json"
                  id:
                    type: integer
                    example: 1
                    description: ID of the created merchant.
                  active:
                    type: boolean
                    description: Merchant status.
              examples:
                Successful creation:
                  value:
                    status:
                      status: OK
                      reason: "00"
                      message: The request has been processed successfully
                      date: "2021-09-21T09:34:48-05:00"
                    id: 1
                    active: true
        "400":
          description: Bad Request
          content:
            application/json:
              schema:
                type: object
                properties:
                  Status:
                    "$ref": "../Models/Status.json"
              examples:
                Failed response:
                  value:
                    Status:
                      status: FAILED
                      reason: BR
                      message: The "name" field is required
                      date: "2021-09-21T09:34:48-05:00"
        "401":
          description: Unauthorized
          content:
            application/json:
              schema:
                type: object
